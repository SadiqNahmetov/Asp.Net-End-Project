@model Banner
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid mx-5 my-3">
    <h3 class="text-danger" >Banner image</h3>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <input class="form-control" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div>
            <label class="my-3" for="exampleInputUsername1">Title</label>
            <input type="text" class="form-control" asp-for="Title">
            <span class="text-danger my-1" asp-validation-for="Title"></span>
        </div>
     
        <div>
            <label class="my-3" for="exampleInputUsername1">SubTitle</label>
            <input type="text" class="form-control" asp-for="SubTitle">
            <span class="text-danger my-1" asp-validation-for="SubTitle"></span>
        </div>


        <button type="submit" class="btn btn-primary my-4">Create</button>
        <a asp-controller="Banner" asp-action="Index" class="btn btn-light my-4">Cancel</a>
    </form>
</div>

