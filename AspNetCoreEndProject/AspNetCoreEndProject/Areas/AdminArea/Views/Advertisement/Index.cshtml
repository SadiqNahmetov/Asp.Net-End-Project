@model ProductBanner
@{
    ViewData["Title"] = "Index";
}




<div class="container-fluid my-3 mx-3">
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="text-danger">Advertisement</h4>
                @if (ViewBag.count == 0)
                {
                    <div class="create-btn mb-3">
                        <a asp-area="AdminArea" asp-controller="Advertisement" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
                    </div>
                }

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>

                                <th>
                                    Image
                                </th>



                                <th class="text-lg-center">
                                    Settings
                                </th>
                            </tr>

                        </thead>
                        <tbody>

                            @if (Model != null)
                            {
                                <tr class="table-info">

                                    <td>
                                        <img style="width:550px; height:400px; border-radius:0" src="~/assets/img/banner/@Model.Image" alt="product banner">
                                    </td>



                                    <td id="parent-image" style="text-align: center;">
                                        <a asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-info"><i class="mdi mdi-information mx-0 text-white"></i></a>
                                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                                        <form id="parent-image" style="display: inline-block;" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                                            <button data-id="@Model.Id" type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }





                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


