@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";

}

<div class="container-fluid my-3 mx-3">
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-danger">Slider</h4>
                <div class="create-btn mb-3">
                    <a asp-area="AdminArea" asp-controller="Slider" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>

                                <th>
                                    Image
                                </th>
                                <th>
                                    Sale
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var slider in Model)
                            {
                                <tr class="table-info">

                                    <td>
                                        <img style="width:150px; height:150px;" src="~/assets/img/slider/@slider.Image" alt="slider" />
                                    </td>
                                    <td>
                                        @Html.Raw(slider.Sale)
                                    </td>
                                    <td>
                                        @Html.Raw(slider.Title)
                                    </td>
                                    <td style="width:350px">
                                         @Html.Raw(slider.Description)
                                    </td>
                                    <td id="parent-image" style="text-align: center;">
                                        <a asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-info"><i class="mdi mdi-information mx-0 text-white"></i></a>
                                        <a asp-action="Edit" asp-route-id="@slider.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                                        <form id="parent-image" style="display: inline-block;" asp-action="Delete" asp-route-id="@slider.Id" method="post">
                                            <button data-id="@slider.Id" type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
