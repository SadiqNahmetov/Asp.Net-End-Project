@model Slider
@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid my-3 mx-3">
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-danger">Slider</h4>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>

                                <th>
                                    Image
                                </th>
                                <th>
                                    Sale
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Description
                                </th>
                              
                            </tr>

                        </thead>
                        <tbody>
                          
                                <tr class="table-info">

                                    <td >
                                        <img style="width:300px; height:300px" src="~/assets/img/slider/@Model.Image" alt="slider" />
                                    </td>
                                    <td>
                                        @Model.Sale
                                    </td>
                                    <td>
                                        @Model.Title
                                    </td>
                                    <td style="width:350px">
                                        @Html.Raw(Model.Description)
                                    </td>
                                   
                                  
                                </tr>
                           


                        </tbody>
                    </table>
                    <a asp-controller="Slider" asp-action="Index" class="btn btn-primary my-3">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

