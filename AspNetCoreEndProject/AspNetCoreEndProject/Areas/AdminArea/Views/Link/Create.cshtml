@model Link
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid mx-5 my-3">
    <h3>Slider image</h3>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <input class="form-control" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
       
        <div>
            <label class="my-3" for="exampleInputUsername1">Title</label>
            <input type="text" class="form-control" asp-for="Title">
            <span class="text-danger my-1" asp-validation-for="Title"></span>
        </div>
        <div>
            <label class="my-3" for="exampleInputUsername1">Description</label>
            <input type="text" class="form-control" asp-for="Description">
            <span class="text-danger my-1" asp-validation-for="Description"></span>
        </div>
        <div>
            <label class="my-3" for="exampleInputUsername1">Color</label>
            <input type="text" class="form-control" asp-for="Color">
            <span class="text-danger my-1" asp-validation-for="Color"></span>
        </div>

        <button type="submit" class="btn btn-primary my-4">Create</button>
        <a asp-controller="Link" asp-action="Index" class="btn btn-light my-4">Cancel</a>
    </form>
</div>
