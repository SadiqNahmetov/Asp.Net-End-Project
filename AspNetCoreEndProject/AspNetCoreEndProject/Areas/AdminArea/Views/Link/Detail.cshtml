@model Link
@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid my-3 mx-3">
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-danger">Slider</h4>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>

                                <th>
                                    Icon
                                </th>
                                <th>
                                    Title
                                </th>

                                <th>
                                    Description
                                </th>
                                <th>
                                    Color
                                </th>

                            </tr>

                        </thead>
                        <tbody>

                            <tr class="table-info">

                                <td>
                                    <img style="width:300px; height:300px; border-radius:0 !important" src="~/assets/img/icon/@Model.Icon" alt="slider" />
                                </td>
                                <td>
                                    @Model.Title
                                </td>

                                <td style="width:350px">
                                    @Model.Description
                                </td>
                                <td>
                                    @Model.Color
                                </td>


                            </tr>



                        </tbody>
                    </table>
                    <a asp-controller="Link" asp-action="Index" class="btn btn-primary my-3">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

