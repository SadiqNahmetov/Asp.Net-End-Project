@model IEnumerable<Brand>
@{
    ViewData["Title"] = "Index";
}




<div class="container-fluid my-3 mx-3">
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="text-danger my-2">Brand</h4>

                <div class="create-btn my-3">
                    <a asp-area="AdminArea" asp-controller="Brand" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
                </div>


                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>

                                <th>
                                    Image
                                </th>

                                <th class="text-lg-center">
                                    Settings
                                </th>
                            </tr>

                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="table-info">

                                    <td>
                                        <img style="width:150px; height:150px; border-radius:0" src="~/assets/img/brand/@item.Image" alt="brand" />
                                    </td>

                                    <td id="parent-image" style="text-align: center;">
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info"><i class="mdi mdi-information mx-0 text-white"></i></a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                                        <form id="parent-image" style="display: inline-block;" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                            <button data-id="@item.Id" type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


