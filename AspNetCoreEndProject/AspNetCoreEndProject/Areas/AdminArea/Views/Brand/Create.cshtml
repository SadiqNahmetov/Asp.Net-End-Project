@model Brand
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid mx-5 my-3">
    <h3 class="text-danger">Brand image</h3>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <input class="form-control" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>


        <button type="submit" class="btn btn-primary my-4">Create</button>
        <a asp-controller="Brand" asp-action="Index" class="btn btn-light my-4">Cancel</a>
    </form>
</div>
