@model Product
@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid my-3 mx-3">
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title text-danger">Product</h4>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>

                                <th>
                                    Title
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    DiscountPrice

                                </th>
                                <th>
                                    SellerCount
                                </th>
                                <th>
                                    Description
                                </th>

                                <th>
                                    Category
                                </th>

                            </tr>

                        </thead>
                        <tbody>

                            <tr class="table-info">

                                <img style="width:150px; height:150px;" src="~/assets/img/product/@Model.ProductImage.FirstOrDefault(m=>m.IsMain)?.Image" alt="slider" />
                                </td>
                                <td>
                                    @Model.Title
                                </td>
                                <td>
                                    @Model.Price.ToString("##.00")$
                                </td>
                                <td>
                                    @((Model.Price-((Model.Price*Model.DiscountPrice)/100)).ToString("##.00"))$
                                </td>
                                <td>
                                    @Model.SellerCount.ToString("")
                                </td>
                                <td style="width:350px">
                                    @Html.Raw(Model.Description)
                                </td>
                                <td>
                                    @Html.Raw(Model.Category.Name)
                                </td>


                            </tr>



                        </tbody>
                    </table>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary my-3">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

